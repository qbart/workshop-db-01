<table>
  <thead>
    <tr>
      <th>ID</th>
      <th>Title</th>
      <th>Rating</th>
    </tr>
  </thead>
  <tbody>
    <% @movies.each do |movie| %>
      <tr>
        <td>#<%= movie.id %></td>
        <td><%= movie.title %></td>
        <td><%= vote_score movie.votes.average(:rating) %></td>
      </tr>
    <% end %>
  </tbody>
</table>

